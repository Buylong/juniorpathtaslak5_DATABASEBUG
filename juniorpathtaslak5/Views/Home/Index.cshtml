@model List<juniorpathtaslak5.Models.Student>

@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron text-center">
    <h1 class="display-4">Welcome to JuniorPath</h1>
    <p class="lead">Anaokulu Veli Bilgilendirme Sistemi</p>
</div>

<div class="row">
    <!-- Profil Section -->
    <div class="col-md-4">
        <div class="card">
            <img src="https://via.placeholder.com/150" class="card-img-top" alt="Profile Picture">
            <div class="card-body">
                <h5 class="card-title">Profil</h5>
                <p class="card-text">Çocuğunuzun profil bilgilerini buradan görüntüleyebilirsiniz.</p>
                <a href="#" class="btn btn-primary">Profili Görüntüle</a>
            </div>
        </div>
    </div>

    <!-- Aktiviteler Section -->
    <div class="col-md-4">
        <div class="card">
            <img src="https://via.placeholder.com/150" class="card-img-top" alt="Activities">
            <div class="card-body">
                <h5 class="card-title">Aktiviteler</h5>
                <p class="card-text">Günlük aktiviteleri buradan takip edebilirsiniz.</p>
                <a href="#" class="btn btn-primary">Aktiviteleri Görüntüle</a>
            </div>
        </div>
    </div>

    <!-- Günlük Yemek Listesi Section -->
    <div class="col-md-4">
        <div class="card">
            <img src="https://via.placeholder.com/150" class="card-img-top" alt="Meal Plan">
            <div class="card-body">
                <h5 class="card-title">Günlük Yemek Listesi</h5>
                <p class="card-text">Çocuğunuzun günlük yemek listesini buradan takip edebilirsiniz.</p>
                <a href="#" class="btn btn-primary">Yemek Listesini Görüntüle</a>
            </div>
        </div>
    </div>
</div>
